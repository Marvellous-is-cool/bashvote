<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Voting App</title>
    <!-- Include Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #000;
        color: #fff;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        color: #dcca87;
      }
    </style>
  </head>
  <body>
    <%- include('header') %>
    <div class="container mt-5">
      <h1>Welcome to the Voting App</h1>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h3>Important Information</h3>
        <b>VOting ends 12:59am....</b>
        <button
          type="button"
          class="btn btn-rounded btn-dark text-white close"
          data-dismiss="alert"
          onclick="this.parentElement.style.display='none';"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/vote" method="post">
        <label for="award" class="form-label">Select an award category:</label>
        <select name="award" id="award" class="form-select">
          <!-- Populate the select options dynamically from your database -->
          <% awards.forEach(award => { %>
          <option value="<%= award.id %>"><%= award.title %></option>
          <% }); %>
        </select>
        <p class="mt-3">Kindly select an award category.</p>
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
      </form>
    </div>
    <!-- Include Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
