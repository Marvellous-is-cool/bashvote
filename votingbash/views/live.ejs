<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Live Voting - LINCSSA BASH</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(135deg, #4361ee 0%, #4cc9f0 100%);
        min-height: 100vh;
        font-family: "Inter", sans-serif;
        color: #fff;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .live-header {
        margin-top: 2rem;
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        color: #fff;
        text-shadow: 0 2px 10px rgba(49, 57, 66, 0.2);
        letter-spacing: 2px;
      }
      .live-container {
        background: rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        padding: 2rem;
        margin: 2rem 0;
        width: 100%;
        max-width: 700px;
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }
      .contestant-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 12px;
        padding: 1rem 1.5rem;
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px rgba(49, 57, 66, 0.08);
        transition: box-shadow 0.3s;
      }
      .contestant-row:hover {
        box-shadow: 0 4px 16px rgba(49, 57, 66, 0.18);
      }
      .contestant-info {
        display: flex;
        align-items: center;
        gap: 1.2rem;
      }
      .contestant-img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #4cc9f0;
        box-shadow: 0 2px 8px rgba(49, 57, 66, 0.12);
      }
      .contestant-name {
        font-size: 1.2rem;
        font-weight: 600;
        color: #343a40;
        background: rgba(255, 255, 255, 0.7);
        padding: 0.3rem 1rem;
        border-radius: 8px;
        margin-right: 0.5rem;
      }
      .contestant-votes {
        font-size: 1.1rem;
        font-weight: 700;
        color: #4361ee;
        background: #fff;
        padding: 0.3rem 1rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(49, 57, 66, 0.08);
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      .contestant-votes i {
        color: #f72585;
        font-size: 1.3rem;
      }
      @media (max-width: 600px) {
        .live-header {
          font-size: 1.5rem;
        }
        .live-container {
          padding: 1rem;
          max-width: 98vw;
        }
        .contestant-row {
          flex-direction: column;
          align-items: flex-start;
          padding: 1rem;
        }
        .contestant-info {
          gap: 0.7rem;
        }
        .contestant-img {
          width: 40px;
          height: 40px;
        }
        .contestant-name,
        .contestant-votes {
          font-size: 1rem;
          padding: 0.2rem 0.7rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="live-header">
      <i class="bx bx-pulse bx-spin"></i> Live Voting
    </div>
    <div class="live-container">
      <div class="mb-4">
        <input
          type="text"
          id="searchInput"
          class="form-control"
          placeholder="Quick search contestants..."
          style="max-width: 400px; margin: auto"
        />
      </div>
      <% awardsWithContestants.forEach(award => { %>
      <div class="mb-5">
        <h2
          style="
            color: #fff;
            font-size: 1.5rem;
            font-weight: 700;
            text-shadow: 0 2px 10px rgba(49, 57, 66, 0.2);
            margin-bottom: 1rem;
          "
        >
          <i class="bx bxs-trophy" style="color: #ffd700"></i> <%= award.title
          %>
        </h2>
        <% if (award.contestants.length > 0) { %> <%
        award.contestants.forEach(contestant => { %>
        <div
          class="contestant-row"
          data-name="<%= contestant.nickname.toLowerCase() %>"
          data-award="<%= award.title.toLowerCase() %>"
        >
          <div class="contestant-info">
            <img
              src="/uploads/<%= contestant.photo_url %>"
              alt="<%= contestant.nickname %>"
              class="contestant-img"
            />
            <span class="contestant-name"><%= contestant.nickname %></span>
          </div>
          <div class="contestant-votes">
            <i class="bx bxs-like"></i>
            <span><%= contestant.votes %> votes</span>
          </div>
        </div>
        <% }) %> <% } else { %>
        <div class="text-center text-muted">No contestants for this award.</div>
        <% } %>
      </div>
      <% }) %> <% if (awardsWithContestants.length === 0) { %>
      <div class="text-center text-muted">
        No awards or contestants available.
      </div>
      <% } %>
    </div>
    <script>
      document
        .getElementById("searchInput")
        .addEventListener("input", function (e) {
          const val = e.target.value.toLowerCase();
          document.querySelectorAll(".contestant-row").forEach((row) => {
            const name = row.getAttribute("data-name");
            const award = row.getAttribute("data-award");
            if (name.includes(val) || award.includes(val)) {
              row.style.display = "";
            } else {
              row.style.display = "none";
            }
          });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
