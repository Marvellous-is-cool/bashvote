<!-- voteNow.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vote Now</title>
    <!-- Include Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Include your custom CSS -->
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <%- include('header') %>

    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h3>Instruction</h3>
      Click on Proceed to vote button, enter an email, then confirm and you will
      be redirected to the paystack platform.
      <br />
      Kindly <b> wait or go back to the gateway </b> when you are done paying
      (especially if you are paying through transfer) until you are redirected
      back sucessfully here, else teh server will not be able to process your
      vote, and you <b> WILL </b> lose your vote in the process.
      <button
        type="button"
        class="btn btn-rounded btn-dark text-white close"
        data-dismiss="alert"
        onclick="this.parentElement.style.display='none';"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center">
        <h2>Vote Now</h2>
        <button id="copyLinkButton" class="btn btn-secondary">Copy Link</button>
      </div>

      <!-- Display the selected contestant details -->
      <div class="contestant-card">
        <img
          src="/uploads/<%= selectedContestant.photo_url %>"
          alt="<%= selectedContestant.nickname %>"
          class="img-small"
        />

        <p class="mt-2 nickname">
          Nickname: <%= selectedContestant.nickname %>
        </p>
        <p>Level: <%= selectedContestant.level %></p>
        <p>Award Title: <%= awardTitle %></p>

        <!-- "Proceed to Vote" button triggers email modal -->
        <button id="proceedToVoteButton" class="btn btn-primary">
          Proceed to Vote
        </button>
      </div>
    </div>

    <!-- Email modal -->
    <div class="modal" tabindex="-1" role="dialog" id="emailModal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <!-- Beautiful modal header -->
          <div class="modal-header">
            <h5 class="modal-title">Enter a valid email address</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>

          <div class="modal-body">
            <!-- Email form with Bootstrap validation classes -->
            <form
              action="/<%= selectedContestant.id %>/payment/get-url"
              method="post"
              id="emailForm"
              class="needs-validation"
              novalidate
            >
              <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  required
                />
                <div class="invalid-feedback" id="emailError"></div>
              </div>
              <button
                type="submit"
                class="btn btn-primary mt-3"
                id="continueButton"
                style="display: none"
              >
                Continue
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include Popper.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/validator@13.6.0"></script> -->
    <script src="/script/emailValidation.js"></script>
    <script src="/script/copyLink.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("proceedToVoteButton")
          .addEventListener("click", function () {
            // Show the email modal
            var emailModal = new bootstrap.Modal(
              document.getElementById("emailModal")
            );
            emailModal.show();
          });

        // Handle email form submission and validation
        document
          .getElementById("emailForm")
          .addEventListener("submit", function (event) {
            event.preventDefault();

            // Continue with the remaining logic
            var email = document.getElementById("email").value;

            console.log("Entered Email:", email); // Log entered email

            // Store the entered email in local storage
            localStorage.setItem("userEmail", email);

            // Add the stored email to the request body
            var requestBody = {
              email: email,
              id: "<%= selectedContestant.id %>",
            };

            console.log("Request Body:", requestBody); // Log request body

            // Change button text to indicate redirection
            document.getElementById("continueButton").innerText =
              "Redirecting to Paystack... Please wait";
            document.getElementById("continueButton").disabled = true;

            // Fetch Paystack authentication URL directly from the client-side
            fetch(`/<%= selectedContestant.id %>/payment/get-url`, {
              method: "POST", // Specify the request method
              headers: {
                "Content-Type": "application/json", // Specify the content type
              },
              body: JSON.stringify(requestBody), // Updated: Include request body
            })
              .then((response) => response.json())
              .then((data) => {
                console.log("Paystack Response:", data); // Log Paystack response

                // Continue processing as needed
                if (data.authorization_url) {
                  // Redirect to Paystack authentication URL
                  window.location.href = data.authorization_url;
                } else {
                  // Handle the case where the response indicates an error
                  console.error("Invalid response from server:", data);

                  // Reset button text and enable the button on error
                  document.getElementById("continueButton").innerText =
                    "Continue";
                  document.getElementById("continueButton").disabled = false;
                }
              })
              .catch((error) => {
                console.error("Error during fetch request:", error);

                // Reset button text and enable the button on error
                document.getElementById("continueButton").innerText =
                  "Continue";
                document.getElementById("continueButton").disabled = false;
              });
          });
      });
    </script>
    <!-- views/footer.ejs -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
